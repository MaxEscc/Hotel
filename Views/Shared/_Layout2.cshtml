<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelReservationnn</title>
    
    <!-- CSS here -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="~/css/magnific-popup.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/themify-icons.css" />
    <link rel="stylesheet" href="~/css/nice-select.css" />
    <link rel="stylesheet" href="~/css/flaticon.css" />
    <link rel="stylesheet" href="~/css/gijgo.css" />
    <link rel="stylesheet" href="~/css/animate.css" />
    <link rel="stylesheet" href="~/css/slicknav.css" />
    <link rel="stylesheet" href="~/css/style.css" />



</head>





<body style="background-image: url('/img/banner/bradcam.png'); background-size: cover; background-position: center center; background-attachment: fixed;">
<header>
    <div class="header-area">
        <div id="sticky-header" class="main-header-area">
            <div class="container-fluid p-0">
                <div class="row align-items-center no-gutters">
                    <!-- Menú de navegación -->
                    <div class="col-xl-5 col-lg-6">
                        <div class="main-menu d-none d-lg-block" >
                            <nav>
                                <ul id="navigation">
                                    <li><a asp-controller="Home" asp-action="Index" class="active">home</a></li>

                                    <li><a asp-controller="Bookings" asp-action="RoomsView">Rooms</a></li>
                           


                                      <!-- Mis Reservas -->
                                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                                    {
                                        <li><a asp-controller="Bookings" asp-action="MyBookings">Mis Reservas</a></li>
                                    }

                                    <!-- Admin Panel -->
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a asp-area="" asp-controller="Admin" asp-action="Dashboard">Admin Panel</a></li>
                                    }

                                  
                                </ul>
                            </nav>
                        </div>
                    </div>

                    <!-- Logo -->
                <div class="col-xl-2 col-lg-2" >
                    <div class="logo-img">
                        <!-- Usamos asp-controller y asp-action para generar el enlace dinámicamente -->
                        <a asp-controller="Bookings" asp-action="ClientIndex">
                            <img src="~/img/logo.png" alt="Logo">
                        </a>
                    </div>
                </div>

                

                 



                 <!-- Botones de Login/Logout y Welcome -->
<div class="col-xl-5 col-lg-4 d-none d-lg-block marin">
    <div class="book_room">
        <div class="socail_links" style="padding-right: 20px;">
            <ul>
                <li>
                    <a href="#">
                        <i class="fa fa-facebook-square"></i>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-twitter"></i>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-instagram"></i>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Botones de Login/Logout y Welcome -->
        <div class="d-flex align-items-center">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <!-- Saludo de Bienvenida -->
                <span class="navbar-text me-2" style="color: #ffffff;">Welcome, @User.Identity.Name!</span>

                <!-- Botón Logout con el estilo de "Book A Room" -->
                <div class="book_btn d-none d-lg-block">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link" style="border: none; background: none; padding: 0;">
                            Logout
                        </button>
                    </form>
                </div>
            }
            else
            {
                <!-- Botón Login con estilo "Book A Room" -->
                <div class="book_btn d-none d-lg-block">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                        Login
                    </a>
                </div>

                <!-- Botón Register con estilo "Book A Room" -->
                <div class="book_btn d-none d-lg-block">
                    <a href="@Url.Action("Register", "Account")" class="btn btn-secondary">
                        Register
                    </a>
                </div>
            }
        </div>
    </div>
</div>



                    <!-- Menú móvil -->
                    <div class="col-12">
                        <div class="mobile_menu d-block d-lg-none"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>



<br>
<br>


  <main role="main" class="container mt-5 py-5">
        <div class="content-wrapper shadow-sm p-3">
            @RenderBody()
        </div>
    </main>

   




    <!-- footer -->
