@{
    Layout = "_Layout2";
}

<!-- Panel de Administración -->
<div class="admin-panel">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <!-- Botón: Gestionar Habitaciones -->
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <a href="@Url.Action("ManageRooms", "Admin")" class="btn btn-primary btn-block d-flex flex-column align-items-center">
                    <i class="fa fa-bed fa-3x mb-3"></i>
                    <span>Gestionar Habitaciones</span>
                </a>
            </div>
            <!-- Botón: Gestionar Reservas -->
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <a href="@Url.Action("ManageBookings", "Admin")" class="btn btn-success btn-block d-flex flex-column align-items-center">
                    <i class="fa fa-book fa-3x mb-3"></i>
                    <span>Gestionar Reservas</span>
                </a>
            </div>
        </div>
    </div>
</div>


