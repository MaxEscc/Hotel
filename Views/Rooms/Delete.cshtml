@model HotelReservation.Models.Room

@{
    Layout = "_Layout2";
}

<div class="container mt-4 p-3 rounded shadow-sm bg-light">
    <h1 class="text-center text-danger">¿Está seguro de que desea eliminar esta habitación?</h1>
    
    <div>
        <h4 class="text-center">Detalles de la Habitación</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RoomType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RoomType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsAvailable)
            </dt>
            <dd class="col-sm-10">
                <span class="badge @((Model.IsAvailable ? "bg-success" : "bg-danger"))">
                    @((Model.IsAvailable ? "Disponible" : "No Disponible"))
                </span>
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="RoomId" />
        <button type="submit" class="btn btn-danger btn-lg px-5">Eliminar Habitación</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg px-5 ms-3">Volver a la Lista</a>
    </form>
</div>
